{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/properties-alphabetical-order": true,
    "selector-class-pattern": [
      "^([a-z][a-zA-Z0-9]*)?$",
      {
        "message": "Class names should be in camelCase."
      }
    ],
    "custom-property-pattern": null
  }
}
